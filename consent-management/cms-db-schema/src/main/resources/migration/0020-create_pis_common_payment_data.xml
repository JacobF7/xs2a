<databaseChangeLog logicalFilePath="db.changelog-1.0.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <include relativeToChangelogFile="true" file="_typedef.xml"/>

    <changeSet author="iiu@adorsys.com.ua" id="2018-11-28-1">
        <comment>Create sequence for pis common payment data id.</comment>
        <createSequence sequenceName="pis_common_payment_data_id_seq"/>
        <sql dbms="mariadb">CREATE SEQUENCE pis_common_payment_data_id_seq</sql>
    </changeSet>

    <changeSet author="iiu@adorsys.com.ua" id="2018-11-28-2">
        <comment>Create table pis_common_payment_data.</comment>

        <createTable tableName="pis_common_payment_data">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="payment_id" type="VARCHAR(40)">
                <constraints nullable="false"/>
            </column>
            <column name="payment" type="${blob.type}">
                <constraints nullable="false"/>
            </column>
            <column name="consent_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="consent_id" baseTableName="pis_common_payment_data"
                                 constraintName="fk_pis_common_payment_pis_consent" deferrable="false"
                                 initiallyDeferred="false"
                                 referencedColumnNames="id" referencedTableName="pis_consent"/>
    </changeSet>
</databaseChangeLog>

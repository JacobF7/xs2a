<databaseChangeLog logicalFilePath="db.changelog-1.0.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="ssh@adorsys.com.ua" id="2018-10-29-1">
        <comment>Create sequence for piis consent id.</comment>
        <createSequence sequenceName="piis_consent_id_seq"/>
        <sql dbms="mariadb">CREATE SEQUENCE piis_consent_id_seq</sql>
    </changeSet>

    <changeSet author="ssh@adorsys.com.ua" id="2018-10-29-2">
        <comment>Create table piis_consent.</comment>

        <createTable tableName="piis_consent">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="aspsp_consent_data" type="BLOB"/>
            <column name="consent_status" type="VARCHAR(25)">
                <constraints nullable="false"/>
            </column>
            <column name="consent_type" type="VARCHAR(5)">
                <constraints nullable="false"/>
            </column>
            <column name="expire_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="external_id" type="VARCHAR(40)">
                <constraints nullable="false"/>
            </column>
            <column name="last_action_date" type="DATE"/>
            <column name="psu_id" type="VARCHAR(40)"/>
            <column name="request_date_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="tpp_info_id" type="BIGINT"/>
            <column name="tpp_access_type" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

    <changeSet author="ssh@adorsys.com.ua" id="2018-10-29-3">
        <comment>Create table piis_account_reference.</comment>

        <createTable tableName="piis_account_reference">
            <column name="consent_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="iban" type="VARCHAR(34)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="consent_id, currency, iban" constraintName="piis_account_reference_pkey"
                       tableName="piis_account_reference"/>

        <addForeignKeyConstraint baseColumnNames="consent_id" baseTableName="piis_account_reference"
                                 constraintName="fk__piis_account_reference__piis_consent" deferrable="false"
                                 initiallyDeferred="false"
                                 referencedColumnNames="id" referencedTableName="piis_consent"/>
    </changeSet>

</databaseChangeLog>
